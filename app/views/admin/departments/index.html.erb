<div class="container">

  <div class="page-header"><h1>Departments Information</h1></div>
 <%= link_to "Create New Department", new_admin_department_path,class: "btn btn-default", remote: true %>
  <br><br>
  <table>
    <tr>
      <td> <input type="text" id="name" onkeyup="filter()" placeholder="Search for names.." title="Type in a name"> </td>
      <td><input type="text" id="description" onkeyup="filter()" placeholder="Search for  description.." title="Type in description"></td>
      <td><select id="status" onchange="filter()" name="status">
        <option value="">Select Status</option>
        <option value="active">Active</option>
        <option value="disabled">Disabled</option>
      </select></td>
      </tr>
  </table>



  <table class="table table-bordered" id="Table">
  <thead><th>S.No.</th><th>Name</th><th>Description</th><th>Status</th></thead>


  <% @department.each do |depart| %>

  <tr>
    <td><%= depart.id %></td>
    <td><%= depart.name %></td>
    <td><%= depart.description  %></td>

    <td> <%= depart.status %></td>
    <td> <%= link_to "Edit Department", edit_admin_department_path(depart.id), remote: true %></td>
  </tr>
    <%end %>


</table>
</div>