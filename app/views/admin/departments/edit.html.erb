<div class="container">
  <h1>Edit Departments</h1>

  <%= form_for @department, :url =>{:action => "update"} do |f| %>




    <%= f.label 'Name' %>
    <%= f.text_field :name %>



    <%= f.label 'Description' %>
    <%= f.text_field :description %>


    <%= f.label 'Status' %>
    <%= f.text_field :status  %>
    <%= f.submit %>

  <% end %>

</div>

