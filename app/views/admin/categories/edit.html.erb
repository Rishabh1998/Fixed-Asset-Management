<div class="container">
<h1>Edit Categories</h1>

<%= form_for @categories, :url =>{:action => "update", :id =>@categories} do |f| %>


  <%= f.label 'Department Id?' %>
  <%= f.text_field :department_id  %>

  <%= f.label 'Name' %>
  <%= f.text_field :name %>



  <%= f.label 'Description' %>
  <%= f.text_field :description %>


  <%= f.label 'Status' %>
  <%= f.text_field :status  %>
  <%= f.submit %>

<% end %>

</div>

