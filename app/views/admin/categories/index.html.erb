<div class="container">


  <input type="text" id="name" onkeyup="name_filter()" placeholder="Search for names.." title="Type in a name">
  <input type="text" id="description" onkeyup="description_filter()" placeholder="Search for  description.." title="Type in description">
  <input type="text" id="status" onkeyup="status_filter()" placeholder="Search for status.." title="Type in a status">

  <table class="table table-striped" id="Table">
    <thead><th>Name</th><th>Description</th><th>Status</th><th>Department Name</th></thead>

    <%= link_to "Create Category", new_admin_category_path, remote: true %>

 <% @categories.each do |category| %>
  <tr>

    <td><%= category.name %></td>
    <td><%= category.description  %></td>
    <td><%= category.status %></td>
    <td><%= Department.find_by(:id => category.department_id).name %></td>
  </tr>


      <td><%= link_to "edit" ,controller: "categories" , action:"edit" , id:category.id %></td>


  <%end %>
  <tr></tr>


  </table>
</div>

